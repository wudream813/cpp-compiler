{
	"name": "cpp-compiler",
	"displayName": "C++ 编译器",
	"version": "2.8.0",
	"publisher": "Wu_dream",
	"description": "Wu_dream 制作的C++编译器",
	"engines": {
		"vscode": "^1.74.0"
	},
	"license": "MIT",
	"icon": "icon/icon.png",
	"categories": [
		"Programming Languages",
		"Other",
		"C++",
		"Better Compiler",
		"OIer",
		"Snippets"
	],
	"activationEvents": [
		"onLanguage:cpp"
	],
	"main": "./extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "cpp-compiler-sidebar",
					"title": "C++ 编译器",
					"icon": "icon/sidebar-icon.svg"
				}
			]
		},
		"views": {
			"cpp-compiler-sidebar": [
				{
					"type": "webview",
					"id": "cppCompilerSidebar",
					"name": "编译控制",
					"icon": "icon/sidebar-icon.svg",
					"contextualTitle": "C++编译控制"
				}
			]
		},
		"commands": [
			{
				"command": "cpp-compiler.contextSubmenu",
				"title": "cpp-compiler",
				"icon": "$(code)"
			},
			{
				"command": "cpp-compiler.runInternal",
				"title": "内置终端运行",
				"icon": "$(play)"
			},
			{
				"command": "cpp-compiler.runExternal",
				"title": "外部终端运行",
				"icon": "$(terminal)"
			},
			{
				"command": "cpp-compiler.cppCompile",
				"title": "仅编译",
				"icon": "$(gear)"
			},
			{
				"command": "extension.openInExternalTerminal",
				"title": "在外部终端打开"
			}
		],
		"menus": {
			"editor/title/run": [
				{
					"command": "cpp-compiler.runInternal",
					"when": "resourceLangId == cpp",
					"group": "cpp-compiler@1"
				},
				{
					"command": "cpp-compiler.runExternal",
					"when": "resourceLangId == cpp",
					"group": "cpp-compiler@2"
				},
				{
					"command": "cpp-compiler.cppCompile",
					"when": "resourceLangId == cpp",
					"group": "cpp-compiler@3"
				}
			],
			"editor/context": [
				{
					"submenu": "cpp-compiler.contextSubmenu",
					"when": "resourceLangId == cpp && resourceScheme == file",
					"group": "navigation"
				}
			],
			"cpp-compiler.contextSubmenu": [
				{
					"command": "cpp-compiler.runExternal",
					"group": "cpp-run@1"
				},
				{
					"command": "cpp-compiler.runInternal",
					"group": "cpp-run@2"
				},
				{
					"command": "cpp-compiler.cppCompile",
					"group": "cpp-compile@1"
				}
			],
			"explorer/context": [
				{
					"command": "extension.openInExternalTerminal",
					"group": "navigation",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"submenus": [
			{
				"id": "cpp-compiler.contextSubmenu",
				"label": "c++编译器"
			}
		],
		"keybindings": [
			{
				"command": "cpp-compiler.runExternal",
				"key": "f11"
			},
			{
				"command": "cpp-compiler.runInternal",
				"key": "ctrl+f11"
			},
			{
				"command": "cpp-compiler.cppCompile",
				"key": "alt+f11"
			}
		],
		"configuration": {
			"title": "C++ 编译器",
			"properties": {
				"cpp-compiler.compileOptions": {
					"type": "string",
					"default": "-std=c++14 -Wall -O2 -Wl,--stack=400000000",
					"description": "用于编译C++文件的g++选项"
				},
				"cpp-compiler.useStaticLinking": {
					"type": "boolean",
					"default": false,
					"description": "是否使用静态编译（添加 -static 选项），静态编译的程序可在其他同类系统上运行，无需依赖库，但文件体积较大"
				},
				"cpp-compiler.useConsoleInfo": {
					"type": "boolean",
					"default": false,
					"description": "是否使用 ConsoleInfo.exe 来显示程序运行信息（警告：此选项仅可在 windows 系统生效）"
				},
				"cpp-compiler.HashCacheInExtension": {
					"type": "boolean",
					"default": false,
					"description": "Hash 缓存存放的位置，若取消勾选，则以文件存储于临时文件夹。否则将存在于内存中，关闭 vscode 窗口就会清除"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@vscode/test-electron": "^2.2.0",
		"@vscode/vsce": "^2.15.0",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.0",
		"typescript": "^4.5.4"
	}
}